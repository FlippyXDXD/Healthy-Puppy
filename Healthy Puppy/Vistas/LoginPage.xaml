<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Healthy_Puppy.LoginPage"
             Title="Inicio de Sesión">
    <VerticalStackLayout Padding="20">
        <Label Text="Correo Electrónico"/>
        <Entry x:Name="EmailEntry" Placeholder="Ingrese su correo" Keyboard="Email"/>
        <Label Text="Contraseña"/>
        <Entry x:Name="PasswordEntry" Placeholder="Ingrese su contraseña" IsPassword="True"/>
        <Button Text="Iniciar Sesión" Clicked="OnLoginClicked"/>
    </VerticalStackLayout>
</ContentPage>
