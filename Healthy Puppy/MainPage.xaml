<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Healthy_Puppy.MainPage"
             Title="Página Principal">
    <ScrollView>
        <StackLayout Padding="20" BackgroundColor="#A9F57F">
            <Label Text="Bienvenido a Healthy Puppy" FontSize="24" HorizontalOptions="Center" Margin="0,20,0,20" />

            <!-- Imagen central -->
            <Image Source="inicio.png" Aspect="AspectFit" HeightRequest="200" />

            <!-- Botones para las diferentes secciones -->
            <Button Text="Registro" Clicked="OnRegisterClicked" BackgroundColor="#008CBA" TextColor="White" Margin="0,10,0,0" />
            <Button Text="Lista de Dueños" Clicked="OnViewOwnersClicked" BackgroundColor="#008CBA" TextColor="White" Margin="0,10,0,0" />
            <Button Text="Control Médico" Clicked="OnMedicalControlClicked" BackgroundColor="#008CBA" TextColor="White" Margin="0,10,0,0" />
            <Button Text="Diagnóstico" Clicked="OnDiagnosisClicked" BackgroundColor="#008CBA" TextColor="White" Margin="0,10,0,0" />
            <Button Text="Configuraciones" Clicked="OnSettingsClicked" BackgroundColor="#008CBA" TextColor="White" Margin="0,10,0,0" />
        </StackLayout>
    </ScrollView>
</ContentPage>